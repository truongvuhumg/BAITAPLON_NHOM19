@model QUANLYTHUVIEN.Models.Nhaxuatban

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa Thông Tin Nhà Xuất Bản</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NXBID" />
             <div class="form-group">
                <label asp-for="NXBID" class="control-label"> MÃ NXB</label>
                <input asp-for="NXBID" class="form-control" />
                <span asp-validation-for="NXBName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NXBName" class="control-label">Tên Nhà Xuất Bản</label>
                <input asp-for="NXBName" class="form-control" />
                <span asp-validation-for="NXBName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NXBAddress" class="control-label">Địa Chỉ</label>
                <input asp-for="NXBAddress" class="form-control" />
                <span asp-validation-for="NXBAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">PhoneNumber</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary"  > danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
